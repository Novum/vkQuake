# ---------------------------
# targets / rules
# ---------------------------

.PHONY:	clean debug release

DEFAULT_TARGET := vkQuake.exe
all: $(DEFAULT_TARGET) dll

%.o:	%.c
	$(CC) $(DFLAGS) -c $(CFLAGS) $(SDL_CFLAGS) -o $@ $<
ifeq ($(DEBUG),0)
%.o:	../Shaders/Compiled/Release/%.c
	$(CC) $(DFLAGS) -c $(CFLAGS) $(SDL_CFLAGS) -o $@ $^
else
%.o:	../Shaders/Compiled/Debug/%.c
	$(CC) $(DFLAGS) -c $(CFLAGS) $(SDL_CFLAGS) -o $@ $^
endif
%.res:	../Windows/%.rc
	$(WINDRES) -I../Windows --output-format=coff --target=pe-x86-64 -o $@ $<

vkQuake.exe: $(OBJS) $(SYSOBJ_RES)
	$(LINKER) $(OBJS) $(SYSOBJ_RES) $(LDFLAGS) $(LIBS) $(SDL_LIBS) -o $@
	$(call do_strip,$@)

dll:
	cp ../Windows/codecs/x64/*.dll .
	cp ../Windows/SDL2/lib64/*.dll .

release:	vkQuake.exe
debug:
	$(error Use "make DEBUG=1")

clean:
	$(RM) *.o *.d *.res *.dll $(DEFAULT_TARGET)

sinclude $(OBJS:.o=.d)
