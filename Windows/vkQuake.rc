			VALUE "FileDescription",	"vkQuake Quake engine"
			VALUE "FileVersion",		VER_FILEVERSION_STR
			VALUE "LegalCopyright",		VER_LEGAL_COPYRIGHT
			VALUE "OriginalFilename",	"vkQuake.exe"
