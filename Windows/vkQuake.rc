#define VER_PRODUCTVERSION_STR		VER_FILEVERSION_STR
#define VER_LEGAL_COPYRIGHT         "\xA9 " VKQUAKE_COPYRIGHT_YEAR

#ifdef DEBUG
	#define VER_DEBUG				VS_FF_DEBUG
#else
	#define VER_DEBUG				0
#endif

