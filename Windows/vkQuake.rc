#include <winresrc.h>
#include "../Quake/quakever.h"

icon ICON "vkQuake.ico"

////////////////////////////////////////////////////////////////

#define VER_FILEVERSION				VKQUAKE_VERSION_MAJOR,VKQUAKE_VERSION_MINOR,VKQUAKE_VER_PATCH,0
